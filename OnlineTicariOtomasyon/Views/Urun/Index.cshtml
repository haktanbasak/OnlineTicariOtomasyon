@using OnlineTicariOtomasyon.Models.Sınıflar;
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
{
    <p>
        Ürün Adı: @Html.TextBox("p")
        <input type="submit" value="Ara"/>
    </p>
}
<br />
<h2>Ürün Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>
        <th>GÖRSEL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UrunID</td>
            <td>@item.UrunAd</td>
            <td>@item.Marka</td>
            <td>@item.Stok</td>
            <td>@item.AlisFiyat</td>
            <td>@item.SatisFiyat</td>
            <td>@item.Kategori.KategoriAd</td>
            <td><img src="@item.UrunGorsel" style="width:70px;"/></td>
            <td><a href="/Urun/UrunSil/@item.UrunID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@item.UrunID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Urun/SatisYap/@item.UrunID" class="btn btn-default" style="background-color:#0094ff">Satış Yap</a></td>
        </tr>
    }
</table>
<a href="/Urun/UrunEkle" class="btn btn-primary">Ürün Ekle</a>


